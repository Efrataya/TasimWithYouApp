<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:orientation="vertical"
    tools:context=".fragments.auth.FragmentRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30sp"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/entryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="חדש כאן? הרשם כדי להתרשם מהיכולות המופלאות של Tasim With You!"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text="שם"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:hint="שם פרטי ושם משפחה"
            android:inputType="textPersonName"
            android:textColorHint="#9F9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text="כתובת מגורים"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addressInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:hint="הרחוב שלך, מספר הבית ומספר הדירה"
            android:inputType="textPersonName"
            android:textColorHint="#9F9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/datelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text="אימייל"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:hint="yourName@Example.com"
            android:inputType="textEmailAddress"
            android:textColorHint="#9F9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/terminalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|right"
            android:text="סיסמא"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:hint="סיסמא באנגלית באורך 10 תווים ממספרים ואותיות"
            android:inputType="textPassword"
            android:textColorHint="#9F9E9E"
            android:textSize="14sp" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:background="@drawable/my_button"
            android:onClick="regFunc"
            android:text="הרשמה"
            android:textColor="#FFFCFC"
            android:textSize="20sp" />

        <Button
            android:id="@+id/returnButtonReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="72dp"
            android:layout_marginTop="15sp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="regFunc"
            android:text="חזרה"
            android:textColor="#757575"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>